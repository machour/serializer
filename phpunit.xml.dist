<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
    backupGlobals="true"
    colors="true"
    verbose="true"
    failOnRisky="true"
    failOnWarning="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    stopOnFailure="false">
    <testsuites>
        <testsuite name="Yii Serializer - Test Suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
